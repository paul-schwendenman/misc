#!/usr/bin/python
'''Remove duplicate lines of bash history pres

function from: https://www.peterbe.com/plog/uniqifiers-benchmark
'''
from __future__ import print_function
import sys


def remove_duplicates(seq, idfun=None):
   if idfun is None:
       def idfun(x):
           return x
   seen = {}
   result = []
   for item in seq:
       marker = idfun(item)
       if marker in seen:
           continue
       seen[marker] = 1
       result.append(item)
   return result

def main(filename='/home/paul/.bash_history'):
    with open(filename, mode='r+') as f:
        lines = f.readlines()

        result = remove_duplicates(lines)

        f.seek(0)
        f.writelines(result)
        f.truncate()

    print('Reduced from {} to {} lines'.format(len(lines), len(result)))


if __name__ == '__main__':
    main(sys.argv[1])
